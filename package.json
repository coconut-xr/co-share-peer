{
    "name": "co-share-peer",
    "version": "1.0.0",
    "description": "provides peer to peer functionality for co-share",
    "main": "",
    "scripts": {
        "build": "tsc",
        "check": "run-s check:prettier check:eslint",
        "check:prettier": "prettier --check src/**/*.{ts,tsx}",
        "check:eslint": "eslint src",
        "fix": "run-s fix:prettier fix:eslint",
        "fix:prettier": "prettier --write src/**/*.{ts,tsx}",
        "fix:eslint": "eslint src --fix"
    },
    "dependencies": {
        "co-share": "^3.2.5",
        "events": "^3.3.0",
        "messagepack": "^1.1.12",
        "simple-peer": "^9.11.0",
        "suspend-react": "0.0.8",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/react": "^17.0.27",
        "@types/simple-peer": "^9.11.3",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^4.17.0",
        "@typescript-eslint/parser": "^4.17.0",
        "eslint": "^7.21.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.2.1",
        "react": "^17.0.2",
        "typescript": "^4.2.3"
    }
}
